{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <!-- Profile Header -->
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-body d-flex align-items-center">
                <img src="{{ user.avatarUrl ?? 'https://via.placeholder.com/80' }}" 
                     class="rounded-circle me-4" width="80" height="80" alt="">
                <div>
                    <h3 class="mb-1">{{ user.name ?? user.email }}</h3>
                    <p class="text-muted mb-0">{{ user.email }}</p>
                    <small class="text-muted">
                        Joined {{ user.createdAt|date('M Y') }}
                    </small>
                </div>
                <div class="ms-auto">
                    <a href="{{ path('inventory_new') }}" class="btn btn-gradient">
                        <i class="bi bi-plus-lg me-1"></i>{{ 'profile.create_new'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- My Inventories -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-box me-2"></i>{{ 'profile.my_inventories'|trans }}</span>
                <span class="badge bg-primary">{{ my_inventories|length }}</span>
            </div>
            <div class="card-body p-0">
                {% if my_inventories is empty %}
                    <p class="text-muted text-center py-4 mb-0">{{ 'profile.no_owned'|trans }}</p>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for inventory in my_inventories %}
                        <a href="{{ path('inventory_show', {id: inventory.id}) }}" 
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ inventory.title }}</strong>
                                <br>
                                <small class="text-muted">{{ inventory.items|length }} items</small>
                            </div>
                            <div>
                                {% if inventory.isPublic %}
                                <span class="badge bg-success">{{ 'inventory.public'|trans }}</span>
                                {% endif %}
                                <a href="{{ path('inventory_edit', {id: inventory.id}) }}" class="btn btn-sm btn-outline-secondary ms-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Shared With Me -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-share me-2"></i>{{ 'profile.shared_with_me'|trans }}</span>
                <span class="badge bg-secondary">{{ shared_inventories|length }}</span>
            </div>
            <div class="card-body p-0">
                {% if shared_inventories is empty %}
                    <p class="text-muted text-center py-4 mb-0">{{ 'profile.no_shared'|trans }}</p>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for inventory in shared_inventories %}
                        <a href="{{ path('inventory_show', {id: inventory.id}) }}" 
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ inventory.title }}</strong>
                                <br>
                                <small class="text-muted">by {{ inventory.creator.name ?? inventory.creator.email }}</small>
                            </div>
                            <span class="badge bg-primary">{{ inventory.items|length }} items</span>
                        </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
