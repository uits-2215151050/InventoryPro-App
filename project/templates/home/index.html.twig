{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Create Button -->
        {% if app.user %}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">{{ 'home.latest'|trans }}</h4>
            <a href="{{ path('inventory_new') }}" class="btn btn-gradient">
                <i class="bi bi-plus-lg me-1"></i>{{ 'home.create'|trans }}
            </a>
        </div>
        {% else %}
        <h4 class="mb-4">{{ 'home.latest'|trans }}</h4>
        {% endif %}

        <!-- Latest Inventories -->
        {% if latest_inventories is empty %}
            <div class="card">
                <div class="card-body text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4 mb-3"></i>
                    <p>{{ 'home.no_inventories'|trans }}</p>
                </div>
            </div>
        {% else %}
            <div class="row g-3">
                {% for inventory in latest_inventories %}
                <div class="col-md-6">
                    <a href="{{ path('inventory_show', {id: inventory.id}) }}" class="text-decoration-none">
                        <div class="card h-100">
                            {% if inventory.imageUrl %}
                            <img src="{{ inventory.imageUrl }}" class="card-img-top" style="height: 120px; object-fit: cover;" alt="">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title text-body">{{ inventory.title }}</h5>
                                <p class="card-text text-muted small">
                                    {{ inventory.description|striptags|slice(0, 100) }}{% if inventory.description|length > 100 %}...{% endif %}
                                </p>
                                <div class="d-flex align-items-center text-muted small">
                                    <img src="{{ inventory.creator.avatarUrl ?? 'https://via.placeholder.com/24' }}" 
                                         class="rounded-circle me-2" width="24" height="24" alt="">
                                    {{ inventory.creator.name ?? inventory.creator.email }}
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-0 pt-0">
                                <span class="badge bg-secondary">{{ inventory.items|length }} {{ 'inventory.items_count'|trans }}</span>
                                {% if inventory.isPublic %}
                                <span class="badge bg-success">{{ 'inventory.public'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </a>
                </div>
                {% endfor %}
            </div>
        {% endif %}

        <!-- Popular Inventories -->
        <h4 class="mt-5 mb-4">{{ 'home.popular'|trans }}</h4>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'inventory.title'|trans }}</th>
                        <th>{{ 'inventory.created_by'|trans }}</th>
                        <th>{{ 'inventory.items_count'|trans|capitalize }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for inventory in popular_inventories %}
                    <tr onclick="window.location='{{ path('inventory_show', {id: inventory.id}) }}'">
                        <td>{{ loop.index }}</td>
                        <td><strong>{{ inventory.title }}</strong></td>
                        <td>{{ inventory.creator.name ?? inventory.creator.email }}</td>
                        <td><span class="badge bg-primary">{{ inventory.items|length }}</span></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-tags me-2"></i>{{ 'home.tags'|trans }}
            </div>
            <div class="card-body tag-cloud">
                {% for item in tag_cloud %}
                    {% set tag = item[0] %}
                    {% set count = item.inventoryCount %}
                    <a href="{{ path('app_tag', {name: tag.name}) }}" class="badge bg-primary bg-opacity-75 text-decoration-none m-1"
                       style="font-size: {{ 0.8 + (count * 0.1) }}rem;">
                        {{ tag.name }}
                    </a>
                {% else %}
                    <p class="text-muted mb-0">No tags yet.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
