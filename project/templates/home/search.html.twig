{% extends 'base.html.twig' %}

{% block title %}{{ 'search.title'|trans }}: {{ query }} - {{ parent() }}{% endblock %}

{% block body %}
<h3 class="mb-4">
    <i class="bi bi-search me-2"></i>{{ 'search.title'|trans }}: <em>{{ query }}</em>
</h3>

{% if inventories is empty %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>{{ 'search.no_results'|trans }} "{{ query }}"
    </div>
{% else %}
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>{{ 'inventory.title'|trans }}</th>
                    <th>{{ 'inventory.created_by'|trans }}</th>
                    <th>{{ 'inventory.items_count'|trans|capitalize }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for inventory in inventories %}
                <tr onclick="window.location='{{ path('inventory_show', {id: inventory.id}) }}'">
                    <td>
                        <strong>{{ inventory.title }}</strong>
                        {% for tag in inventory.tags %}
                            <span class="badge bg-secondary ms-1">{{ tag.name }}</span>
                        {% endfor %}
                    </td>
                    <td>{{ inventory.creator.name ?? inventory.creator.email }}</td>
                    <td><span class="badge bg-primary">{{ inventory.items|length }}</span></td>
                    <td>
                        {% if inventory.isPublic %}
                        <span class="badge bg-success">{{ 'inventory.public'|trans }}</span>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}
{% endblock %}
